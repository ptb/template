{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "isolatedModules": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": true
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "@ptb/typescript-config",
  "include": [
    ".",
    ".next/types/**/*.ts",
    "src"
  ]
}
